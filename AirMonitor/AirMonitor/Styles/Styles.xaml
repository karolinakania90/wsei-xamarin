<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <Style TargetType="Label" x:Key="TitleStyle">
        <Setter Property="TextColor" Value="{StaticResource PrimaryColor}"></Setter>
        <Setter Property="FontAttributes" Value="Bold"></Setter>
        <Setter Property="FontSize" Value="24"/>
    </Style>
    <Style TargetType="Frame" x:Key="CaqiFrameStyle">
        <Setter Property="BackgroundColor" Value="LightGreen"></Setter>
    </Style>
    
    
</ResourceDictionary>